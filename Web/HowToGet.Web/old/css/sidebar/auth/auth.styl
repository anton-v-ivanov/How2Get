#sidebar-container {
    .content {
        #login-form,
        #reg-form {
            display: none;
            margin: 0 15px;
            color: #fff;
            text-shadow: 0 1px 0 #9ab1cc;

            &.active {
                display: block;
            }

            .field-wrapper {
                margin-bottom: 5px;
            }

            input[type=text],
            input[type=password] {
                border: 1px solid #d1deec;
                background: #adc0d6;
                color: #fff;
                text-shadow: 0 1px 0 #90aac8;
            }

            .button-wrapper {
                text-align: center;
            }

            .button {
                border-color: #fff;
                color: #91a8c3;
                text-shadow: 0 1px 0 #f1f1f1;
                v-grd(#f9f9f9, #e2e2e2);

                &:active {
                    v-grd(#e2e2e2, #f9f9f9);
                }
            }

            .option {
                text-align: center;
                font-weight: bold;
                color: #7c91aa;
                text-shadow: 0 1px 0 #d1deec;

                .action {
                    border-bottom: 1px dashed #7c91aa;
                    cursor: pointer;
                }
            }
        }
    }
}