.field {
    position: relative;

    input[type=text],
    input[type=password] {
        width: 100%;
        margin: 0;
        padding: 8px 15px;
        border: 1px solid #e6e6e6;
        vertical-align: bottom;
        outline: none;
        color: #808080;
        background: #fff;
        border-radius(20px);
        box-sizing(border-box);
        box-shadow(inset 0 2px 3px rgba(0,0,0,.2));
    }
}